{
    "plugins": [
        "plugins.fileannouncer_handler"
    ],
    "watchers": [
        {
            "name": "File Copier",
            "type": "CopyFile",
            "source": "c:\\temp\\source",
            "destination": "c:\\temp\\destination\\",
            "recursive": true
        }
    ],
    "logging": {
        "level": 20,
        "format": "%(asctime)s:%(message)s"
    }
}