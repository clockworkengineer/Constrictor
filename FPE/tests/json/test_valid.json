{
    "plugins": [
        "plugins.fileannouncer_handler"
    ],
    "watchers": [
        {
            "name": "File Copier",
            "type": "CopyFile",
            "source": "./watcher/source",
            "destination": "./watcher/destination/",
            "exitonfailure": false,
            "deletesource": true,
            "recursive" : false
        }
    ],
    "logging": {
        "level": 20,
        "format": "%(asctime)s:%(message)s"
    }
}